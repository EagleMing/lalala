<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:src="@drawable/ic_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/moment_head_portrait"/>

        <LinearLayout
            android:paddingLeft="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="eagleMing"
                android:id="@+id/moment_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="2016/4/18"
                android:id="@+id/moment_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:src="@drawable/ic_cast_off_light"
        android:id="@+id/moment_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <TextView
        android:text="点赞的人"
        android:id="@+id/moment_like_names"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ListView
        android:id="@+id/moment_comment"
        android:entries="@array/comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>


</LinearLayout>